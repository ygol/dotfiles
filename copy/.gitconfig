[hub]
        protocol = https
[user]
        name = Yves Goldberg
        email = admin@ygol.com
        helper = cache
[alias]
    promote = !$ZSH/bin/git-promote
    wtf     = !$ZSH/bin/git-wtf
    rank-contributers = !$ZSH/bin/git-rank-contributers
    count   = !git shortlog -sn
    st = status
    ci = commit
    br = branch
    df = diff
    lg = log -p
    retrack = "!retrack() { git config \"branch.$1.remote\" $(dirname \"$2\"); git config  \"branch.$1.merge\" \"refs/heads/$(basename \"$2\")\"; }; retrack"
    switch = !legit switch \"$@\"
    branches = !legit branches
    sprout = !legit sprout \"$@\"
    unpublish = !legit unpublish \"$@\"
    harvest = !legit harvest \"$@\"
    sync = !legit sync \"$@\"
    publish = !legit publish \"$@\"
    graft = !legit graft \"$@\"
    ca = commit --amend --reuse-message=HEAD
    s = status -s
    lg = log --oneline --decorate --all --graph
    glog = log -E -i --grep
    sla = log --oneline --decorate --graph --all -20
    car = commit --amend --no-edit
    unstage = reset
    unchange = checkout --
    uncommit = reset --soft HEAD^
    co = checkout
[color]
        diff = auto
        status = auto
        branch = auto
        ui = true
[color "branch"]
    current = yellow reverse
    local = yellow
    remote = green
[color "diff"]
    meta = yellow bold
    frag = magenta bold
    old = red bold
    new = green bold
[color "status"]
    added = yellow
    changed = green
    untracked = cyan
[core]
        excludesfile = ~/.gitignore
        whitespace = trailing-space,space-before-tab
[apply]
        whitespace = nowarn
[advice]
    pushNonFastForward = false
    statusHints = false
[mergetool]
        keepBackup = false
        prompt = false
[difftool]
        prompt = false
[help]
        autocorrect = 1
[rerere]
    enabled = true
[url "git@github.com:"]
  insteadOf = gh:
[difftool "sourcetree"]
	cmd = opendiff \"$LOCAL\" \"$REMOTE\"
	path = 
[mergetool "sourcetree"]
	cmd = /Applications/SourceTree.app/Contents/Resources/opendiff-w.sh \"$LOCAL\" \"$REMOTE\" -ancestor \"$BASE\" -merge \"$MERGED\"
	trustExitCode = true

# New
[merge]
      ff = only
[fetch]
      prune = true
[push]
    default = upstream
[github]
  user = ygol
